<div class="page-header">
  <h1>
    Skiers
    <a href="/skiers/new" class="btn btn-lg btn-success">New Skier</a>
  </h1>
</div>


<div class="row m-b-2">
  <div class="col-md-12">
    <div>
      <div id="location_map" style="height: 480px;"></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Name</th>
        <th>Dob</th>
        <th>Home mountain</th>
        <th>Ski level</th>
        <th>Actions</th>
      </tr>

      <% @skiers.each do |skier| %>
      <tr>
        <td><%= skier.email %></td>
        <td><%= skier.password %></td>
        <td><%= skier.name %></td>
        <td><%= skier.dob %></td>
        <td><%= skier.home_mountain %></td>
        <td><%= skier.ski_level %></td>
        <td>
          <a href="/skiers/<%= skier.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>